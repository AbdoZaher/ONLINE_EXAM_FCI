                                    <div class="form-group">
                                        <label for="Photo">Photo</label>
                                        <div class="custom-file">
                                            <input type="file" class="custom-file-input" asp-for="photo" name="photo" accept="image/*">
                                        </div>
                                        <span class="text-danger">@Html.ValidationMessageFor(model => model.photo)</span>
                                    </div>
