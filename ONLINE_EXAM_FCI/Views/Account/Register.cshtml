                                    <div class="form-group">
                                        <label for="Password">Password</label>
                                        <input type="password"
                                               asp-for="Password"
                                               class="form-control"
                                               id="Password"
                                               pattern="^(?=.*[A-Za-z])(?=.*\d).{6,}$"
                                               title="Password must be at least 6 characters and contain both letters and digits."
                                               required />
                                        <span class="text-danger">@Html.ValidationMessageFor(model => model.Password)</span>
                                    </div>

                                    <div class="form-group">
                                        <label for="PasswordConfirmed">Confirm Password</label>
                                        <input type="password"
                                               asp-for="PasswordConfirmed"
                                               class="form-control"
                                               id="PasswordConfirmed"
                                              
                                               required />
                                        <span class="text-danger">@Html.ValidationMessageFor(model => model.PasswordConfirmed)</span>
                                    </div>











